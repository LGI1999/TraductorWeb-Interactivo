@using TraductorWeb.Models.CustomModels

<!--Esta vista contendra todos los elementos para un filtro que permita la busqueda de una palabra especifica-->
@model Listado
    <form id="formFiltro" asp-action="Filtrar" asp-controller="Listado" method="post" class="row estiloFiltro">
            <div class="form-group col-4">
                <input type="hidden" v-bind:value="indiceTipoFiltroSeleccionado" asp-for="datosFiltro.indiceTipoFiltro" />
                <label>Filtro:</label>
                <select id="tipoFiltro" v-on:change="cambioOption">
                    <option>Traducido</option>
                    <option>Traduccion</option>
                    <option>Presente</option>
                    <option>Pagina</option>
                </select>
            </div>
            <div class="form-group col-6">
                <input id="filtroBuscado" type="text" placeholder="Ingrese el filtro..." asp-for="datosFiltro.filtro" class="form-control" />
                <span class="text-danger letraChica">{{mensajeError}}</span>
            </div>
            <div class="form-group col-2">
                <button type="button" v-on:click="filtrar" class="btn btn-secondary">Buscar</button>
            </div>
    </form>

